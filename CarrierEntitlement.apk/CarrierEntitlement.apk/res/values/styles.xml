<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Animation.SuwWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/suw_slide_next_in</item>
        <item name="android:activityOpenExitAnimation">@anim/suw_slide_next_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/suw_slide_back_in</item>
        <item name="android:activityCloseExitAnimation">@anim/suw_slide_back_out</item>
    </style>
    <style name="SuwContentFrame">
        <item name="android:paddingLeft">?suwMarginSides</item>
        <item name="android:paddingTop">@dimen/suw_content_frame_padding_top</item>
        <item name="android:paddingRight">?suwMarginSides</item>
        <item name="android:paddingBottom">@dimen/suw_content_frame_padding_bottom</item>
    </style>
    <style name="SuwDescription">
        <item name="android:textAppearance">@style/TextAppearance.SuwDescription</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">@dimen/suw_description_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/suw_description_margin_bottom</item>
        <item name="android:lineSpacingExtra">@dimen/suw_description_line_spacing_extra</item>
    </style>
    <style name="SuwDescription.Glif" parent="@style/SuwDescription">
        <item name="android:layout_marginTop">@dimen/suw_description_glif_margin_top</item>
    </style>
    <style name="TextAppearance.SuwDescription.Light" parent="@style/TextAppearance.SuwDescription">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.SuwDescription.Secondary" parent="@style/TextAppearance.SuwDescription">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="SuwRadioButton">
        <item name="android:textAppearance">@style/TextAppearance.SuwDescription</item>
        <item name="android:paddingLeft">@dimen/suw_radio_button_padding_start</item>
        <item name="android:layout_marginLeft">@dimen/suw_radio_button_margin_start</item>
        <item name="android:layout_marginTop">@dimen/suw_radio_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/suw_radio_button_margin_bottom</item>
        <item name="android:lineSpacingExtra">@dimen/suw_radio_button_line_spacing_extra</item>
        <item name="android:paddingStart">@dimen/suw_radio_button_padding_start</item>
        <item name="android:layout_marginStart">@dimen/suw_radio_button_margin_start</item>
    </style>
    <style name="SuwCheckBox">
        <item name="android:textAppearance">@style/TextAppearance.SuwDescription</item>
        <item name="android:paddingLeft">@dimen/suw_check_box_padding_start</item>
        <item name="android:layout_marginLeft">@dimen/suw_check_box_margin_start</item>
        <item name="android:layout_marginTop">@dimen/suw_check_box_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/suw_check_box_margin_bottom</item>
        <item name="android:lineSpacingExtra">@dimen/suw_check_box_line_spacing_extra</item>
        <item name="android:paddingStart">@dimen/suw_check_box_padding_start</item>
        <item name="android:layout_marginStart">@dimen/suw_check_box_margin_start</item>
    </style>
    <style name="SuwCheckBox.Multiline" parent="@style/SuwCheckBox">
        <item name="android:gravity">top</item>
    </style>
    <style name="SuwBaseCardTitle">
        <item name="android:textAppearance">@style/TextAppearance.SuwCardTitle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/suw_card_title_padding_start</item>
        <item name="android:paddingTop">@dimen/suw_card_title_padding_top</item>
        <item name="android:paddingRight">@dimen/suw_card_title_padding_end</item>
        <item name="android:paddingBottom">@dimen/suw_card_title_padding_bottom</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/suw_card_title_padding_start</item>
        <item name="android:paddingEnd">@dimen/suw_card_title_padding_end</item>
    </style>
    <style name="SuwCardTitle" parent="@style/SuwBaseCardTitle" />
    <style name="SuwGlifCardContainer">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:elevation">5.0dip</item>
    </style>
    <style name="SuwBaseHeaderTitle">
        <item name="android:textSize">@dimen/suw_header_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="SuwHeaderTitle" parent="@style/SuwBaseHeaderTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/suw_header_title_padding_top</item>
        <item name="android:paddingBottom">@dimen/suw_header_title_padding_bottom</item>
        <item name="android:layout_marginLeft">?suwMarginSides</item>
        <item name="android:layout_marginRight">?suwMarginSides</item>
        <item name="android:layout_marginBottom">@dimen/suw_header_title_margin_bottom</item>
        <item name="android:lineSpacingExtra">@dimen/suw_header_title_line_spacing_extra</item>
    </style>
    <style name="SuwItemContainer.Description" parent="@style/SuwItemContainer">
        <item name="android:paddingTop">@dimen/suw_description_margin_top</item>
        <item name="android:paddingBottom">@dimen/suw_description_margin_bottom_lists</item>
    </style>
    <style name="SuwItemContainer.Description.Glif" parent="@style/SuwItemContainer.Description">
        <item name="android:paddingTop">@dimen/suw_description_glif_margin_top</item>
        <item name="android:paddingBottom">@dimen/suw_description_glif_margin_bottom_lists</item>
        <item name="android:minHeight">0.0dip</item>
    </style>
    <style name="SuwItemContainer.Verbose" parent="@style/SuwItemContainer">
        <item name="android:paddingTop">@dimen/suw_items_verbose_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/suw_items_verbose_padding_vertical</item>
    </style>
    <style name="SuwItemTitle.Verbose" parent="@style/SuwItemTitle">
        <item name="android:textAppearance">@style/TextAppearance.SuwGlifBody</item>
    </style>
    <style name="TextAppearance.SuwItemSummary" parent="@android:style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="SuwGlifHeaderTitle" parent="@style/SuwBaseHeaderTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:layout_marginLeft">?suwMarginSides</item>
        <item name="android:layout_marginTop">@dimen/suw_glif_header_title_margin_top</item>
        <item name="android:layout_marginRight">?suwMarginSides</item>
        <item name="android:layout_marginBottom">@dimen/suw_glif_header_title_margin_bottom</item>
    </style>
    <style name="SuwGlifIcon">
        <item name="android:layout_marginLeft">?suwMarginSides</item>
        <item name="android:layout_marginTop">@dimen/suw_glif_margin_top</item>
        <item name="android:layout_marginRight">?suwMarginSides</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">@dimen/suw_glif_icon_max_height</item>
    </style>
    <style name="TextAppearance.SuwGlifBody" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="TextAppearance.SuwGlifItemTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="TextAppearance.SuwGlifItemSummary" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="SuwNavBarTheme">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?suwNavBarBackgroundColor</item>
        <item name="android:paddingLeft">@dimen/suw_navbar_padding_sides</item>
        <item name="android:paddingRight">@dimen/suw_navbar_padding_sides</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="suwNavBarTextColor">?android:textColorPrimary</item>
    </style>
    <style name="SetupWizardContentFrame" parent="@style/SuwContentFrame">
        <item name="android:paddingRight">0.0dip</item>
    </style>
    <style name="SetupWizardButton.Negative" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:theme">@style/AccentColorHighlightBorderlessButton</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SetupWizardButton.Positive" parent="@android:style/Widget.Material.Button.Colored" />
    <style name="AccentColorHighlightBorderlessButton">
        <item name="android:colorControlHighlight">?android:colorAccent</item>
    </style>
    <style name="SetupWizardText.Body1" parent="@android:style/TextAppearance.Material.Subhead" />
    <style name="SetupWizardText.Link1" parent="@style/SetupWizardText.Body1">
        <item name="android:textColor">?android:colorPrimary</item>
    </style>
    <style name="SetupWizardText.Error1" parent="@style/SetupWizardText.Body1">
        <item name="android:textColor">#ffff0000</item>
    </style>
    <style name="SetupWizardText.Address1" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="SetupWizardText.AddressRadioButton2" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/SetupWizardText.Address1</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableBottom">@drawable/stroke</item>
        <item name="android:drawablePadding">15.0dip</item>
    </style>
    <style name="SetupWizardText.AddressRadioButton1" parent="@style/SetupWizardText.AddressRadioButton2">
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:drawableTop">@drawable/stroke</item>
    </style>
</resources>
